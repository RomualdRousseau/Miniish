module pixel_clock #(
    DIVIDER = 2 : DIVIDER > 1
  ) (
    input clk,  // clock
    input rst,  // reset
    output out
  ) {
  
  .clk(clk) {
    .rst(rst) {
      dff counter[$clog2(DIVIDER)];
    }
  } 

  always {
    out = counter.q[$clog2(DIVIDER) - 1];
    counter.d = counter.q + 1;
  }
}
